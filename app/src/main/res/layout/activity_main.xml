<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tVmenu"
        android:layout_width="204dp"
        android:layout_height="37dp"
        android:gravity="center"
        android:text="Меню"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.109" />

    <Button
        android:id="@+id/bLog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="392dp"
        android:text="Логин"
        app:layout_constraintEnd_toEndOf="@+id/tVmenu"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/tVmenu"
        app:layout_constraintTop_toBottomOf="@+id/tVmenu" />

    <Button
        android:id="@+id/bReg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Регистрация"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bLog"
        app:layout_constraintStart_toStartOf="@+id/bLog"
        app:layout_constraintTop_toBottomOf="@+id/bLog"
        app:layout_constraintVertical_bias="0.059" />

</androidx.constraintlayout.widget.ConstraintLayout>